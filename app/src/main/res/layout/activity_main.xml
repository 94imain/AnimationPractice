<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ltav1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_alignTop="@+id/right_bt"
        android:layout_toLeftOf="@+id/right_bt"
        android:layout_toStartOf="@+id/right_bt"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ltav2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ltav3"
        android:layout_toStartOf="@+id/ltav3" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ltav3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/ltav2"
        android:layout_alignLeft="@+id/top_bt"
        android:layout_alignStart="@+id/top_bt" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ltav4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_above="@+id/bot_bt"
        android:layout_alignLeft="@+id/top_bt"
        android:layout_alignStart="@+id/top_bt"
        android:layout_marginBottom="49dp" />

    <Button
        android:id="@+id/bot_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/ltav4"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ltav4"
        android:layout_marginBottom="10dp"
        android:text="left coming BTN" />

    <Button
        android:id="@+id/left_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ltav2"
        android:text="Button" />

    <Button
        android:id="@+id/right_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/left_bt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Button" />

    <Button
        android:id="@+id/top_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Button" />

    <Button
        android:id="@+id/flip_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ltav2"
        android:layout_centerHorizontal="true"
        android:text="Flip" />


</RelativeLayout>